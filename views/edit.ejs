<%- include('template/header') -%>

<br>
<h1>Edit News</h1>
<br>
<form method="POST" action="/editnews/<%=id %>">
  <div class="mb-3">
    <label for="judul" class="form-label">Judul</label>
    <input type="text" class="form-control" value="<%=judul %>" name="judul" id="judul" placeholder="Judul Berita">
  </div>
  <div class="mb-3">
    <label for="category" class="form-label">Kategori</label>
    <input type="text" class="form-control" value="<%=category %>" name="category" id="category"
      placeholder="Kategori Berita">
  </div>
  <div class="mb-3">
    <label for="gambar" class="form-label">Gambar</label>
    <input type="text" class="form-control" value="<%=gambar %>" name="gambar" id="gambar" placeholder="Gambar">
  </div>
  <div class="mb-3">
    <label for="desc" class="form-label">Deskripsi Berita</label>
    <textarea class="form-control" name="desc" id="desc" rows="3"><%=desc %></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Simpan</button>
</form>

<%- include('template/footer') -%>